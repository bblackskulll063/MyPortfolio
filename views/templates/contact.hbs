<div class="container-fluid mt-0 contact-style" id="contact">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row">
        <h1 class="text-center main-heading">Contact Us</h1>
        <p class="text-center sub-heading">We will be to help you </p>

        <div class="col-md-6 col-12 mx-auto">
          <form action="/contact" method="post">
            <div class="form-group">
              <label for="inputName">Name</label>
              <input type="text" class="form-control" name="name" id="inputName" placeholder="Full Name">
            </div>
            <div class="form-group">
              <label for="inputEmail">E-mail</label>
              <input type="email" class="form-control" name="email" id="inputemail" placeholder="Enter your correct email" aria-describedby="emailhelp">
              <small id="emailhelp" class="form-text text-muted">We'll never share your email with anyone</small>
            </div>
            <div class="form-group">
              <label for="inputPhone">Phone </label>
              <input type="number" class="form-control" name="phone" id="inputPhone" placeholder="Phone Number">
            </div>
            <div class="form-group">
              <label for="inputMessage">Message</label>
              <input type="text" class="form-control" name="message" id="inputMessage" placeholder="Message">
            </div>
            <button type="submit" class="btn-style btn-primary mt-5">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
